{
  "compilerOptions": {
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "sourceMap": true,
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "target": "ESNext",
    "module": "ES2022",
    "paths": {
      "*": ["../remote/dist/mf-types/*"] // 다운로드된 remote 타입을 자동 인식
    }
  },
  "include": ["src/**/*"]
}
